<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="12dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center"
    tools:context=".Driver.DriverLoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#D7928F8F"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Driver Registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_marginBottom="6dp"
            android:backgroundTint="#D7555252"
            android:id="@+id/driver_reg_email"
            android:hint="Enter email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginBottom="12dp"
            android:backgroundTint="#D7555252"
            android:id="@+id/driver_reg_password"
            android:hint="Enter password"
            android:inputType="textPassword|numberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:textColor="#FFFCFC"
            android:background="@drawable/custom_button_2"
            android:id="@+id/driver_complete_reg_button"
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>