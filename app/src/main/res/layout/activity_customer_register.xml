<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dr_bg"
    tools:context=".Driver.DriverLoginActivity">


    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:textColor="@color/quantum_black_secondary_text"
                android:layout_marginBottom="30dp"
                android:textSize="24sp"
                android:text="Customer Registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:textColorHint="@color/quantum_black_secondary_text"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#D7555252"
                android:id="@+id/customer_reg_email"
                android:hint="Enter email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawableRight="@drawable/ic_vpn_key_black_24dp"
                android:textColorHint="@color/quantum_black_secondary_text"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#D7555252"
                android:id="@+id/cusotmer_reg_password"
                android:hint="Enter password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="18sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:textColor="#FFFCFC"
                android:background="@drawable/custom_button_2"
                android:id="@+id/customer_complete_reg_button"
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>






    </androidx.cardview.widget.CardView>


</LinearLayout>