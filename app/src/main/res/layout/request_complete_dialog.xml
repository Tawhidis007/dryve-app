<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:textAlignment="center"
        android:textColor="@color/quantum_black_secondary_text"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Are You Sure?"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/quantum_black_secondary_text"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        android:text="By clicking okay you are saying that you've got your ride. Please check the pricing for unit KM from options menu."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="@color/quantum_white_text"
            android:background="@color/quantum_black_secondary_text"
            android:text="Cancel"
            android:layout_margin="6dp"
            android:id="@+id/request_complete_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_margin="6dp"
            android:textColor="@color/quantum_white_text"
            android:background="@color/quantum_black_secondary_text"
            android:text="Okay"
            android:id="@+id/request_complete_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>