<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dr_bg"
    tools:context=".Driver.DriverLoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/quantum_black_secondary_text"
                android:layout_marginBottom="30dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="Driver Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:textColor="@color/quantum_black_secondary_text"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#D7555252"
                android:id="@+id/driver_login_email"
                android:hint="Enter email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawableRight="@drawable/ic_vpn_key_black_24dp"
                android:textColor="@color/quantum_black_secondary_text"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#D7555252"
                android:id="@+id/driver_login_password"
                android:hint="Enter password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="18sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:textColor="#FFFCFC"
                android:background="@drawable/custom_button_2"
                android:id="@+id/driver_login_button"
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:textColor="#D7555252"
                android:textAllCaps="false"
                android:background="@drawable/custom_btn_3"
                android:id="@+id/driver_forget_password_button"
                android:text="Forgot your password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    android:textSize="18sp"
                    android:text="Don't have an account?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="#DC00C853"
                    android:id="@+id/driver_register_button"
                    android:layout_marginLeft="2dp"
                    android:text="Register"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>