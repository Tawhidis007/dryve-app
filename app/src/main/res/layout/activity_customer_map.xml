<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f5f5f5"
    tools:context=".Customer.CustomerMapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".70"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="8dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_weight=".30"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:background="#f5f5f5"
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#A6424242"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="Hello tawhid@gmail.com! "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_margin="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:paddingLeft="20dp"
                    android:layout_gravity="center|start"
                    android:textSize="22sp"
                    android:text="Where to?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:paddingRight="8dp"
                    android:layout_gravity="center|end"
                    android:src="@drawable/ic_search_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/find_drivers_button"
                    android:layout_weight=".80"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:textColor="#e8f5e9"
                    android:background="@drawable/custom_button_2"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="Find Dryvers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:scaleType="fitEnd"
                    android:layout_weight=".12"
                    android:layout_gravity="center"
                    android:id="@+id/customer_menu_button"
                    android:background="@drawable/custom_btn"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
